<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Layout.css" rel="stylesheet" type="text/css" media="screen" runat="server" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header>
        <div class="Border">
            <div class="Social">
                <p>Follow Us:</p>
                <div class="SocialIcons">
                    <img src="" alt="Facebook_logo" />
                    <img src="" alt="Twitter_logo" />
                    <img src="" alt="Gmail_logo" />
