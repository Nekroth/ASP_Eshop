            </div>
        </div>
        <div class="references">
            <a href="@Url.Action("Index","Home")">Home</a>
            <a href="@Url.Action("Index","Home")">Shop</a>
            <a href="@Url.Action("Index","Home")">Products</a>
            <a href="@Url.Action("Index","Home")">Blog</a>
            <a href="@Url.Action("Index","Home")">About</a>
            <a href="@Url.Action("Index","Home")">Contact</a>
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
    </div>
    <hr />
    <footer>
        <div class="FooterMain">
            <div>
                <h1>DEBRA</h1>
                <p>Address:</p>
