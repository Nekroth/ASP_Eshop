@{
    ViewBag.Title = "Contact";
}

<div class="Banner">
    <img src="~/Images/contactBanner.png" alt="Contact_Banner" />
</div>
<div class="Main">

    <div class="Flex">
        <div class="Form">
            <form action="" method="get">
                <label>
                    <strong>Your Name</strong>
                    <br />
                    <input type="text"
                           id="name"
                           name="name"
                           required
                           minlength="3"
                           maxlength="10"
                           placeholder="Full Name">
                </label>
                <br />
                <label>
                    <strong>Your Email</strong>
                    <br />
                    <input type="email"
                           id="email"
                           name="email"
                           required
                           minlength="3"
                           maxlength="10"
                           placeholder="Email address">
                </label>
                <br />
                <label>
                    <strong>Subject</strong>
                    <br />
                    <input type="text"
                           id="subject"
                           name="subject"
                           required
                           minlength="3"
                           maxlength="10"
                           placeholder="Subject">
                </label>
                <br />
                <label>
                    <strong>Your Message</strong>
                    <br />
                    <textarea placeholder="Message"></textarea>
                </label>
                <br />
                <input type="submit" value="Send Message" />
            </form>
        </div>
        <div class="Contact">
            <div>
                <h1>Contact US</h1>
